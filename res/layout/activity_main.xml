<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#da5f3e"
    
    android:orientation="vertical"
    android:theme="@android:style/Theme.NoTitleBar"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/ll_anim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="13dp"
       	android:background="@drawable/main_back_anim" 
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/main_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:gravity="center_horizontal"
             >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/bt_path"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  
                    android:layout_marginTop="10dp" 
          			android:layout_marginBottom="10dp"
                    android:background="@drawable/selector_main_path" />

                <ImageButton
                    android:id="@+id/bt_alert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/selector_main_alert" />

                <ImageButton
                    android:id="@+id/bt_numbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/selector_main_members" />

                <ImageButton
                    android:id="@+id/bt_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_main_setting" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>